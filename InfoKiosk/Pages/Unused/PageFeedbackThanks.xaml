<Page x:Class="InfoKiosk.PageFeedbackThanks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InfoKiosk"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageFeedbackThanks">

    <Grid x:Name="GridMain">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.RowSpan="2"
                   HorizontalAlignment="Stretch" 
                   VerticalAlignment="Stretch"/>

        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Image Source="/InfoKiosk;component/Media/Send.png" 
                   MaxHeight="200"/>
            
            <TextBlock Text="Ваше сообщение успешно отправлено" 
                       TextAlignment="Center" 
                       Margin="0,60,0,0"/>
        </StackPanel>
        
        <TextBlock Grid.Row="1"
                   Text="Для продолжения коснитесь экрана" 
                   TextAlignment="Center" 
                   Margin="4" 
                   Foreground="DarkGray" 
                   FontSize="40"/>
    </Grid>
</Page>
